<section class="page-section" id="team">
    <div class="container">
        {{ pimcore_areablock('headline', { allowed: ['headline-brick', 'subheadline-brick', 'centeredtext-brick', 'spacer-brick'] }) }}
        <div class="row">
            <div id="accordion">
                {% for teamValue in teamValues %}
                    <div class="card">
                        <div class="card-header" id="heading{{ teamValue.key }}">
                            <h5 class="mb-0">
                                <button class="btn btn-link{% if loop.first %} collapsed{% endif %}" data-toggle="collapse" data-target="#collapse{{ loop.index }}" aria-expanded="false" aria-controls="collapse{{ loop.index }}">
                                    {{ teamValue.value|trans }}
                                </button>
                            </h5>
                        </div>
                        <div id="collapse{{ loop.index }}" class="collapse{% if loop.first %} show{% endif %}" aria-labelledby="heading{{ loop.index }}" data-parent="#accordion">
                            <div class="card-body">
                                <div class="row">
                                    {% for team in teams %}
                                        {% if team.team == teamValue.value %}
                                            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                                                <div class="team-member">
                                                    <img class="mx-auto rounded-circle" src="{{ team.image }}" alt="..." />
                                                    <h4 class="text-secondary">
                                                        {{ team.firstname }} {{ team.lastname }}
                                                    </h4>
                                                    <p class="text-muted">
                                                        {{ team.team }}
                                                    </p>
                                                    <a class="btn btn-dark btn-social mx-2" href="mailto:{{ team.mail }}">
                                                        <i class="fa-solid fa-envelope"></i>
                                                    </a>
                                                    <a class="btn btn-dark btn-social mx-2" target="_blank" href="{{ team.link }}">
                                                        <i class="fa-solid fa-address-card"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        {{ pimcore_areablock('below', { allowed: ['centeredtext-brick', 'spacer-brick'] }) }}
    </div>
</section>
